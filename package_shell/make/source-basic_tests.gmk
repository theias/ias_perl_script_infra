.PHONY: test test-all test-doc

test-all: test test-doc

test:
	
	# Sytax checking routines.
ifneq ("$(wildcard $(SRC_DIR)/bin/*.pl)","")
	# Running Perl Tests
	find $(SRC_DIR)/bin -type f \
		-name '*.pl' \
	| xargs -r perl -c 
	
endif

ifneq ("$(wildcard $(SRC_DIR)/bin/*.sh)","")
	# Running Bash Tests
	find $(SRC_DIR)/bin -type f \
		-name '*.sh' \
	| xargs -r -n1 bash -n 
	
endif

ifneq ("$(wildcard $(SRC_DIR)/bin/*.py)","") 
	# Running Python Tests
	find $(SRC_DIR)/bin -type f \
		-name '*.py' \
	| xargs -r -n1 python -m py_compile
endif

ifneq ("$(wildcard $(SRC_DIR)/bin/*.rb)","")
	# Running Ruby Tests
	find $(SRC_DIR)/bin -type f \
		-name '*.rb' \
	| xargs -r -n1 ruby -c
endif

test-doc:
	find $(SRC_DIR) -type f \
		-name '*.pl' \
		-o -name '*.pm' \
	| xargs -r podchecker
